[push]
    default = simple
[remote "origin"]
    push = HEAD
[branch]
    autosetupmerge = true
[color]
    branch = auto
    diff = auto
    ui = true
[fetch]
    prune = true
[pull]
	rebase = true
[alias]
    a = add
    ah = "add ."
    co = "commit -v"
    com = "commit -m"
    coma = "commit -am"
    fixup = "commit --amend --no-edit"
    fixup-add = "fixup -a"
    amend = "co --amend"
    amend-add = "amend -a"
    reword = "amend"
    cof = "fixup"
    cofa = "fixup-add"
    cor = "reword"
    coaa = "amend-add"
    abbrev-name =  rev-parse --abbrev-ref
    branch-name =  abbrev-name HEAD
    default-branch = !git abbrev-name $(git symbolic-ref HEAD)
    newpush = "!git push -u origin $(git branch-name)"
    forcepush = "push --force-with-lease"
    ppf = "forcepush"
    ppn = "newpush"
	pp = push
    lgnormal = log
	lgpretty = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    filenames = show --name-only
    sh = show
    shn = filenames
	d = diff
    f = fetch
    st = status
    rf = reflog
    br = branch
    brd- = branch -D
    cho = checkout
    chb = checkout -b
    rb = rebase -i
    rbc- = rebase --continue
    rba- = rebase --abort
    plr = pull --rebase
    plff = pull --ff-only
    chrp = cherry-pick
    chrpc- = cherry-pick --continue
    chrpa- = cherry-pick --abort
    st- = !git fetch && git status
    rh- = reset --hard
    rho- = !git reset --hard origin/$(git branch-name)
    cho- = !git fetch && git checkout $1 && git status
    plw- = !git pull --rebase && git unwip && git status
    ppwf- = !git wip && git forcepush
    chw- = !git checkout $1 && git plw!
    chm- = !git checkout $(git default-branch) && git st-
    sh = !ps && echo $$
    wip = "!w() { \
      git add -A; \
      git commit --no-verify --no-gpg-sign -m \"--wip-- [skip ci]\"; \
     }; w"
    unwip = "!u(){\
      git log -n 1 | grep -q -c wip && git backone ; \
    }; u"
    backone = reset HEAD~1
    rhb = backone --hard
    new = "!git log HEAD@{1}..HEAD@{0}"

