[push]
    default = simple
[remote "origin"]
    push = HEAD
[branch]
    autosetupmerge = true
[color]
    branch = auto
    diff = auto
    ui = true
[fetch]
    prune = true
[pull]
	rebase = true
[alias]
    a = add
    ah = "add ."
    co = "commit -v"
    coma = "commit -am"
    com = "commit -m"
    fixup = "commit --amend --no-edit"
    fixup-add = "fixup -a"
    amend = "commit -v --amend"
    amend-add = "amend -a"
    reword = "amend"
    cof = "fixup"
    cofa = "fixup-add"
    cor = "reword"
    coaa = "amend-add"
    st = status
    sh = show
	pp = push
    branch-name = "!git rev-parse --abbrev-ref HEAD"
    newpush = "!git push -u origin $(git branch-name)"
    forcepush = "push --force-with-lease"
    ppf = "forcepush"
    ppn = "newpush"
    br = branch
    ch = checkout
    chb = "checkout -b"
    rhh = "reset --hard"
    rb = "rebase -i"
    plr = "pull --rebase"
    plff = "pull --ff-only"
    crp = cherry-pick
    rf = reflog
    lgnormal = log
	lgpretty = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
